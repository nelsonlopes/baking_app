<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nelsonlopes.bakingapp.ui.StepActivity">

    <!-- LinearLayout for holding three Android-Me images -->
    <LinearLayout
        android:id="@+id/step_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <!-- This container holds the StepFragment -->
        <FrameLayout android:id="@+id/step_container"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerInside"/>

    </LinearLayout>

</ScrollView>